<div class="indexPage join">
    <md-progress-linear md-mode="indeterminate" ng-if="loading"></md-progress-linear>
    <md-toolbar class="md-hue-2">
        <div class="md-toolbar-tools">
            <md-button class="md-icon-button" aria-label="Settings" ng-disabled="false">
                <a href="/"><img style="margin-left: 5px;" src="~/Images/icons/home-2-24.png" /></a>
            </md-button>
            <span flex></span>
            Join Room
            <span flex></span>
        </div>
    </md-toolbar>
    <div class="mainLogo">
        <img src="~/Images/logo.png" />
    </div>

    <div class="row" >
        <div class="col-xs-12 col-lg-12">
            <div class="col-xs-offset-1 col-xs-10 col-lg-10 cener whiteBackground">
                <md-input-container class="md-block">
                    <input ng-model="room.roomCode" type="text" placeholder="Room Code (4 letters)" md-maxlength="4" maxlength="4" ng-required="true" style="text-transform:uppercase">
                </md-input-container>
            </div>
            <div class="col-xs-offset-1 col-xs-10 col-lg-10 cener whiteBackground">
                <md-input-container class="md-block">
                    <input ng-model="room.pin" type="number" placeholder="Room Pin (4 digits)" ng-required="true">
                </md-input-container>
            </div>
            <div class="col-xs-offset-1 col-xs-10 col-lg-10 cener whiteBackground">
                <md-input-container class="md-block">
                    <input ng-model="room.username" type="text" placeholder="Username" ng-required="true">
                </md-input-container>
            </div>
        </div>
        

        <div class="col-xs-offset-1 col-xs-10 col-lg-10 center" ng-if="!loading">
            <md-button type="submit" class="md-raised md-primary createButton" ng-click="JoinRoom(room)">Join Room</md-button>
        </div>
    </div>
</div>