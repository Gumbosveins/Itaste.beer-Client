@{
    PageData["title"] = "iTaste.beer";
}

<div class="app-hero">
  <header class="app-toolbar">
    <a class="brand" href="/">
      <img src="/Images/icons/1480800465_beer.png" alt="iTaste.beer" />
      <span>iTaste.beer</span>
    </a>
    <span style="flex:1"></span>
    <a class="btn btn-ghost" ui-sref="howitworks">How it works</a>
  </header>

  <main class="hero-inner">
    <div class="hero-card">
      <div class="hero-logo">
        <img src="/Images/logo.png" alt="iTaste.beer" />
      </div>
      <h1 class="hero-title">Host tastings. Score together. Settle debates.</h1>
      <p class="hero-sub">Spin up a room in seconds, invite friends with a code, and see live results on the dashboard.</p>

      <div class="sp-16"></div>
      <div class="btn-group">
        <a class="btn btn-primary" ui-sref="createRoom">Create Room</a>
        <a class="btn btn-secondary" ui-sref="joinroom">Join Room</a>
        <a class="btn btn-ghost" ui-sref="opendashboard">Open Dashboard</a>
        <a class="btn btn-ghost" ui-sref="howitworks">How it works</a>
      </div>

      <div class="sp-24"></div>

      <div class="grid">
        <section class="card">
          <h3>Pick a mode</h3>
          <p>Create a blind tasting, set a reveal code, and keep the suspense until the end.</p>
        </section>
      </div>

      <div class="sp-24"></div>

      <a class="btn btn-secondary" ng-click="Continue()" ng-if="continue">
        <span>Continue as {{username}} · Room {{code}}</span>
      </a>
    </div>
      <div class="sp-24"></div>

      <!-- Donation moved to bottom for prominence without interrupting primary CTAs -->
      <div class="donation-bottom">
        <section class="card donate span-2">
          <h3>Support iTaste.beer</h3>
          <p>This app is crafted and maintained by a solo dev. If it helps your tastings, consider a small donation.</p>
          <form action="https://www.paypal.com/donate" method="post" target="_top">
            <input type="hidden" name="hosted_button_id" value="8SQV6FM9JLV86" />
            <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_donate_LG.gif" alt="Donate with PayPal" />
          </form>
        </section>
      </div>
  </main>

  <footer style="text-align:center; padding:12px; color:var(--muted)">
    © {{ year }} iTaste.beer
  </footer>
</div>