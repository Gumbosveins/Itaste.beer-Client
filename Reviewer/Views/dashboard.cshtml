        <div class="col-lg-12 beerRecord" ng-repeat="r in data.revs | orderBy : '-total'" ng-class="{red: openBeer == r.id}" style="border-left:1px solid #f5f5f5">
            <div class="col-lg-1 col-lg-1 number" style="">{{$index + 1}}</div>
            <div class="col-lg-9 col-lg-9">
                <div class="beerName" style="font-size:16px;">{{r.name}}</div>
                <div class="side">-AR: {{r.ar}} - AP: {{r.ap}} - FL: {{r.fl}} - MF: {{r.mf}} - OA: {{r.oa}} - CB: {{r.cb}}</div>
